
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Ekle</h2>


<script type="text/javascript">CKEDITOR.replace('editor')</script>


<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Create/" enctype="multipart/form-data">
        <div class="from-group">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">* </span></label>

            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlenght="5" type="text" required />
            </div>

        </div>

        <div class="from-group">
            <label for="cmail" class="control-label col-lg-2">Açıklama <span class="required">* </span></label>

            <div class="col-lg-10">
                <textarea name="Aciklama" required class="ckeditor"></textarea>
            </div>

        </div>

        <div class="from-group">
            <label for="curl" class="control-label col-lg-2">Resim</label>

            <div class="col-lg-10">
                <input type="file" class="form-control" name="ResimURL" accept=".jpeg,.png,.jpg" />
            </div>

        </div>
        <br />
        <div class="text-center">

            <div class="col-lg-offset-2 col-lg-10">

                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-secondary" type="button"><a href="/Hizmet/Index">İptal</a></button>
            </div>

        </div>

    </form>








</div>
