@using UrumsalWeb

<footer id="footer" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">

    <div class="footer-newsletter">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h4>Lavin Otel</h4>

                </div>

            </div>
        </div>
    </div>

    <div class="footer-top">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-6 footer-contact">
                    <h4>İletişim</h4>
                    <address>
                        <p>
                            <strong> @ViewBag.Iletisim.Adres </strong><br>

                            <strong>Telefon:</strong> @ViewBag.Iletisim.Telefon <br>
                            <strong>Fax:</strong>@ViewBag.Iletisim.Fax  <br>
                            <strong>Whatsapp:</strong>@ViewBag.Iletisim.Whatsapp <br>
                        </p>
                    </address>
                </div>
                <div class="col-lg-3 col-md-6 footer-links">
                    <h4>Menü</h4>
                    <ul>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Index/">Ana Sayfa</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Hizmetlerimiz/">Hizmetler</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/BlogPost/">Blog</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Iletisim/">İletişim</a></li>
                    </ul>
                </div>




                <div class="col-lg-3 col-md-6 footer-info">
                    <h3>Hakkımızda</h3>
                    <p>@ViewBag.Hakkimizda.Aciklama</p>
                    <div class="social-links mt-3">
                        <a href="https://x.com/home /@ViewBag.Iletisim.Twitter" class="twitter"><i class="bx bxl-twitter"></i></a>
                        <a href="www.facebook.com/@ViewBag.Iletisim.Facebook" class="facebook"><i class="bx bxl-facebook"></i></a>
                        <a href="www.instagram.com/@ViewBag.Iletisim.Instagram" class="instagram"><i class="bx bxl-instagram"></i></a>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="container">
        <div class="copyright">
            <p> @DateTime.Now.Year &copy; Tüm Hakları Saklıdır</p>
        </div>
        <div class="credits">
            <!-- All the links in the footer should remain intact. -->
            <!-- You can delete the links only if you purchased the pro version. -->
            <!-- Licensing information: https://bootstrapmade.com/license/ -->
            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/free-bootstrap-template-corporate-moderna/ -->
            Designed by <a href="https://kurumsalweb.com/">KurumsalWEB</a>
        </div>
    </div>
</footer>

